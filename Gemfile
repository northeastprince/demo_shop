source "https://rubygems.org"

ruby "3.2.2"

gem "rails", github: "rails/rails"

# Drivers
gem "sqlite3"
gem "puma"

# Assets
gem "sprockets-rails"
gem "importmap-rails"
gem "turbo-rails"
gem "stimulus-rails"

gem "bootsnap", require: false

group :development, :test do
  gem "debug"
end

group :development do
  gem "web-console"
end

group :test do
  gem "capybara"
  gem "selenium-webdriver"
end
